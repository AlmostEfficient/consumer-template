{
  "expo": {
    "name": "Solana Consumer Template",
    "slug": "solana-consumer-template",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
			"bundleIdentifier": "com.usecapsule.template.expo",
			"associatedDomains": [
        "webcredentials:app.beta.usecapsule.com?mode=developer",
        "webcredentials:app.usecapsule.com"
			],
      "supportsTablet": true
    },
    "android": {
			"package": "com.usecapsule.template.expo",
			"intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "app.beta.usecapsule.com",
              "pathPrefix": "/.well-known/assetlinks.json"
            },
            {
              "scheme": "https",
              "host": "app.usecapsule.com",
              "pathPrefix": "/.well-known/assetlinks.json"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
		"packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "ts",
        "tsx",
        "web.js",
        "web.jsx",
        "web.ts",
        "web.tsx"
      ]
    }
  }
}
